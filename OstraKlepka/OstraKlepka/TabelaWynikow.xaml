<Window x:Class="OstraKlepka.TabelaWynikow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OstraKlepka"
        mc:Ignorable="d"
        Title="TabelaWynikow" Height="450" Width="800">

    <FlowDocumentReader ViewingMode="Scroll">
        <FlowDocument>
            <Table x:Name="mTable" CellSpacing="5">
                <Table.Columns>
                    <TableColumn/>
                    <TableColumn/>
                </Table.Columns>

                <TableRowGroup>
                    <TableRow Background="SkyBlue">
                        <TableCell ColumnSpan="2" TextAlignment="Center">
                            <Paragraph FontSize="24pt" FontWeight="Bold">Wyniki turnieju</Paragraph>
                        </TableCell>
                    </TableRow>
                </TableRowGroup>
            </Table>
        </FlowDocument>
    </FlowDocumentReader>
</Window>
